<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    >

    <TextView
        android:id="@+id/name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/name_lbl"
        app:layout_constraintTop_toTopOf="@id/name_lbl"

        />

    <TextView
        android:id="@+id/website_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website: "
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/name_lbl"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />

    <TextView
        android:id="@+id/website_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/website_lbl"
        app:layout_constraintTop_toTopOf="@id/website_lbl" />

    <TextView
        android:id="@+id/street_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street: "
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/name_lbl"
        app:layout_constraintTop_toBottomOf="@id/website_tv" />

    <TextView
        android:id="@+id/street_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/street_lbl"
        app:layout_constraintTop_toTopOf="@id/street_lbl" />

    <TextView
        android:id="@+id/city_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/name_lbl"
        app:layout_constraintTop_toBottomOf="@id/street_lbl" />

    <TextView
        android:id="@+id/city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/city_lbl"
        app:layout_constraintTop_toTopOf="@id/city_lbl" />


</androidx.constraintlayout.widget.ConstraintLayout>